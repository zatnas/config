# Restart sxhkd
super + Escape
	pkill sxhkd; \
	sh -c "nohup sxhkd >/dev/null 2>&1 &"

# terminal emulator
super + shift + Return
	termite

# program launcher
super + d
	dmenu_run

super + {_,shift +} m
	sh $XDG_HOME_CONFIG/scripts/{_,un}mounter

