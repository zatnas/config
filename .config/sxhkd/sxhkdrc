Print
	import -quality 100 -window root \
    	"$HOME/Pictures/screenshot$(date +%y%m%d%H%M%S%N).jpg"	


# dwm
super + Return
	dwmc zoom

super + {_,shift +} b
	dwmc toggle{_,e}bar

super + s
	dwmc togglefakefullscreen

super + Tab
	dwmc view

super + shift + space
	dwmc togglefloating

super + n
	dwmc toggleborder

super + {j,k}
	dwmc focusstack {-,+}1

super + shift + {j,k}
	dwmc movestack {-,+}1

super + {_,ctrl +} {_,shift +} {1-9}
	dwmc {_,toggle}{viewex,tagex} {0-8}

super + 0
	dwmc viewall

super + bracket{left,right}
	dwmc incgappx {-,+}1

super + shift + q
	dwmc killclient

super + {h,l}
	dwmc setmfact {-,+}0.05

super + shift + x
	dwmc quit
